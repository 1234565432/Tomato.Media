<?xml version="1.0" encoding="utf-8"?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <PropertyGroup>
    <TomatoCore-Platform Condition="'$(Platform)' == 'Win32'">x86</TomatoCore-Platform>
    <TomatoCore-Platform Condition="'$(Platform)' != 'Win32'">$(Platform)</TomatoCore-Platform>
  </PropertyGroup>

  <ItemGroup Condition="'$(TargetPlatformIdentifier)' == 'UAP'">
      <Reference Include="$(MSBuildThisFileDirectory)..\..\lib\uap10.0\Tomato.Core.winmd">
        <Implementation>Tomato.Core.dll</Implementation>
      </Reference>
      <ReferenceCopyLocalPaths Include="$(MSBuildThisFileDirectory)..\..\runtimes\win10-$(TomatoCore-Platform)\native\Tomato.Core.dll" />
  </ItemGroup>

</Project>